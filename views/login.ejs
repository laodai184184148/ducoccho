<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
      <%- include('partials/messages.ejs')%>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/users/register">Register</a>
      </p>
    </div>
<div class="text-center">Or</div>
    <div class="card card-body">
      <a href="#" class="fb btn" style="border: 1px solid #78a206;background-color:#00aced;
      border-radius: 30px;">
        <i class="fa fa-facebook-official"></i> Login with Facebook
       </a>
      <br>
      <a href="/auth/google" class="google btn" style="border: 1px solid #78a206;background-color:rgb(237, 0, 111);
      border-radius: 30px;"><i class="fa fa-google fa-fw">
        </i> Login with Google+
      </a>
    </div>
  </div>
  
</div>
